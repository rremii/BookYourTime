{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@user/*": ["./src/user/*"],
      "@host/*": ["./src/host/*"],
      "@icons/*": ["./assets/icons/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
